<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.project.senior.dndapp" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MenuActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NewCharActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_new_char" >
        </activity>
        <activity
            android:name=".DieRollerActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_die_roller" >
        </activity>
        <activity
            android:name=".SpellBookActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_spell_book" >
        </activity>
        <activity
            android:name=".SavedCharacterActivity"
            android:label="@string/title_activity_saved_character" >
        </activity>
    </application>

</manifest>
